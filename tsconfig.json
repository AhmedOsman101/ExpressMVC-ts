{
  "compilerOptions": {
    "allowJs": true,
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": ["**/*.ts", "test.js"],
  "exclude": ["node_modules"]
}
